{
  "author": "Titux Metal (MBP) <github@lgdweb.fr>",
  "description": "Remix starter app with Tailwind Css, Prisma and MongoDb.",
  "license": "MIT",
  "name": "remix-prisma-tailwind-starter",
  "private": true,
  "repository": "https://github.com/TituxMetal/remix-prisma-tailwind-starter",
  "sideEffects": false,
  "version": "1.0.0",
  "scripts": {
    "build": "run-s \"build:*\"",
    "build:css": "yarn generate:css --minify",
    "build:remix": "remix build",
    "dev": "run-p \"dev:*\"",
    "dev:css": "yarn generate:css --watch",
    "dev:remix": "remix dev",
    "generate:css": "tailwindcss -o ./src/tailwind.css",
    "prisma": "prisma db push",
    "start": "run-p \"start:*\"",
    "start:remix": "remix-serve build"
  },
  "dependencies": {
    "@prisma/client": "4.16.2",
    "@remix-run/node": "1.19.3",
    "@remix-run/react": "1.19.3",
    "@remix-run/serve": "1.19.3",
    "isbot": "3.7.1",
    "react": "18.2.0",
    "react-dom": "18.2.0"
  },
  "devDependencies": {
    "@remix-run/dev": "1.19.3",
    "@remix-run/eslint-config": "1.19.3",
    "eslint": "8.55.0",
    "npm-run-all": "4.1.5",
    "prettier-plugin-tailwindcss": "0.5.9",
    "prisma": "4.16.2",
    "tailwind-styled-components": "2.2.0",
    "tailwindcss": "3.3.6"
  },
  "engines": {
    "node": ">=14"
  }
}
